<resources>

    <!-- Base application theme. -->
    <style name="AppTheme"
           parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay"
           parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay"
           parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.MentorsScreen" />

    <style name="AppTheme.AnnouncementsScreen" />

    <style name="AppTheme.NoActionBar.Fullscreen"
           parent="android:Theme.Light.NoTitleBar.Fullscreen">
        <item name="android:customNavigationLayout">@null</item>
    </style>

    <style name="AppTheme.About">
        <item name="colorPrimary">#1d1d1d</item>
        <item name="colorPrimaryDark">#000000</item>
    </style>
</resources>
